@model IEnumerable<CinemaProject.Models.MovieShowHall>

@{
    ViewBag.Title = "inTheater";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> show right now   </h1>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.hall.id)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.hall.id)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
           
            <td>
                <input type="button" class="btn btn-primary" value="buy ticket" onclick="location.href='@Url.Action("BuyTicket", "MovieShowHalls",new { item.hall.id })'" />

            </td>
        </tr>
    }

</table>
